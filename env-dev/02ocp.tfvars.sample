subscription_id = "azuresubscriptionid"

tenant_id = "azuretenantid"

openshift_script_path = "./scripts"

os_image = ""

bastion_vm_size = "Standard_DS2_v2"

master_vm_size = "Standard_DS4_v2"

infra_vm_size = "Standard_DS4_v2"

node_vm_size = "Standard_DS4_v2"

gluster_vm_size = "Standard_F16s_v2"

os_storage_account_tier = "Standard"

data_storage_account_tier = "Premium"

storage_account_replication_type = "LRS"

enableMetrics = "true"

enableLogging = "true"

enableCockpit = "false"

enableAzure = "true"

enableCRS = "true"

storageKind = "managed"

master_instance_count = "3"

infra_instance_count = "3"

node_instance_count = "3"

crsapp_instance_count ="3"

crsreg_instance_count ="3"

os_disk_size = "64"

# local container storage disk size
data_disk_size = "128"

gluster_disk_size = "1023"

# total number of disks to be assigned to gluster, per node
gluster_disk_count = "4"

# this is the non-root local user account name, plus OpenShift user login; will be created on each node, plus within OCP
admin_username = "oshiftadm"

# OpenShift user password
openshift_password = "aUniquePassword2remember"

# autogenerated public key
ssh_public_key_path = "./../ssh/openshift_id.pub"

# JSON-ready version of the private key
connection_private_ssh_key_path = "./../ssh/openshift_id.forJSON"

aad_client_id = "azureserviceprincipalid"

aad_client_secret = "azureserviceprincipalsecret"

// use "nipio" for no external DNS setups, set to "custom" when the next variable is used for external DNS integration
default_sub_domain_type = "nipio"

default_sub_domain = "openshift01.hooli.com"
